<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="10dp"
    android:background="@color/Orange_UnhealthyForSensitiveGroup">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/img_custom_notification"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_api_moderate"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/img_custom_notification"
        android:layout_toStartOf="@id/tv_time_custom"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_titile_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/tv_messege_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:text="@string/app_name"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_time_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        style="@style/TextAppearance.Compat.Notification.Info"/>
        android:text="12/23"/>


</RelativeLayout>