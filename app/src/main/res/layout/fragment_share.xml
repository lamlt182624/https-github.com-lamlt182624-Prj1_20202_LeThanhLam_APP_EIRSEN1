<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Setup Data"
            android:textSize="30dp" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:stretchColumns="1">

            <TableRow>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_devices_black_24dp" />

                <Button android:text="New Device"
                    android:id="@+id/btn_new_device_developer"/>

            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_sentiment_satisfied_black_24dp" />

                <Button android:text="New User"
                    android:id="@+id/btn_new_user_developer"/>
            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_place_black_24dp" />

                <Button android:text="New Location"
                    android:id="@+id/btn_new_location_developer"/>

            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_filter_1_black_24dp" />

                <Button android:text="New Calibration"
                    android:id="@+id/btn_new_calibration_developer"/>
            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_message_black_24dp" />
                <Button android:text="New Message"
                    android:id="@+id/btn_new_message_developer"/>

            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_account_box_black_24dp" />
                <Button android:text="New Url Information"
                    android:id="@+id/btn_new_url_developer"/>
            </TableRow>


        </TableLayout>
        <Button
            android:id="@+id/btn_logout_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="log out"
            android:layout_gravity="right"
            android:layout_margin="30dp"/>
    </LinearLayout>
</ScrollView>